<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

  <body>
    <div class="main-content">
      <h1><%= title %></h1>
      <a href="/create_message"><button>Create message +</button></a>
      <div>
        <% messages.map((message)=>{ %>
          <div class="card">
            <h1><%= message.user %></h1>
            <p><%= message.message %></p>
            <p>
            <span>
              <%= message.date.getHours()%>:<%= message.date.getMinutes()%>:<%= message.date.getSeconds()%>     
            </span>
            <span>
              <%= message.date.getDate()%>/<%= message.date.getMonth()+1%>/<%= message.date.getFullYear()%>
            </span>
            </p>
          </div>
        <% }) %>
      </div>
    </div>
    <script src="/javascripts/front.js"></script>
  </body>
</html>
